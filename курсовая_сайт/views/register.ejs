<!doctype html>
<html>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&display=swap"
  rel="stylesheet">
<style>
  body {
    background-color: antiquewhite;
  }

  .reg {
    display: flex;
    justify-content: center;
  }

  input {
    background-color: #FFE9E9;
    width: 350px;
    height: 30px;
    border-radius: 30px;
    padding-left: 10px;
    margin-bottom: 10px;
  }

  ::placeholder {
    font-family: "Jost", serif;
    font-size: 16px;
    letter-spacing: 4%;
    color: #750604;
    opacity: 90%;
    font-weight: 900;
  }

  .reg_block {
    display: block;
    margin-top: 100px;
    text-align: left;
    padding-left: 140px;
    padding-top: 100px;
    width: 1090px;
    height: 658px;
    background-color: #750604;
    opacity: 70%;
  }

  .button {
    width: 255px;
    height: 45px;
    background-color: #C7816C;
    color: white;
    font-size: 22px;
    border-color: none;
    font-weight: 700;
    margin-bottom: 0;

  }

  .reg_block h1 {
    color: #FFFFFF;
    font-family: "Jost", serif;
    font-size: 48px;
    font-weight: 700;
    margin-left: 35px;
    margin-bottom: 20px;

  }

  .reg p a {
    font-size: 20px;
    font-weight: 600;
    color: white;
    text-decoration: none;
    font-family: "Jost", serif;
    margin-left: 20px;
  }

  .img_reg {
    position: absolute;
    margin-left: 750px;
  }
  .header-box {
  width: 100%;
  height: 92px;
  background-color: #9E4A49;
}

header {
  display: flex;
  margin: 0 auto;
  max-width: 1557px;
  opacity: 100%;
  align-items: center;
  padding-top: 7px;
}

li {
  list-style-type: none;
}

ul {
  display: flex;
  margin: 0 auto;
  width: 855px;
  justify-content: space-between;
  font-family: "Jost", serif;
  font-size: 22px;
  color: #FFFFFF;
  letter-spacing: 1.3px;
  font-weight: 300;
}

header a p,
header a {
  font-family: "Jost", serif;
  font-size: 22px;
  color: #FFFFFF;
  letter-spacing: 1.3px;
  font-weight: 300;
}
</style>

<head>
  <title>Регистрация</title>
</head>

<body>
  <div class="header-box">
    <header>
      <img src="/img/logo.png" alt="">
      <ul>
        <a href="/table">
          <li>Таблицы</li>
        </a>
        <a>
          <li>Статистика</li>
        </a>
        <a>
          <li>Новости</li>
        </a>
        <a>
          <li>Коммуникации</li>
        </a>
      </ul>
      <a href="/logout">Выйти</a>
  </div>
  <div class="reg">
    <div class="reg_block">
      <h1>Регистрация</h1>
      <form method="post" action="/register">
        <input type="text" id="login" name="login" placeholder="Логин в формате xxx123" required /><br /><br />
        <input type="text" id="name" name="name" placeholder="Имя" required /><br /><br />
        <input type="password" id="password" name="password" placeholder="Пароль" required /><br /><br />
        <input type="submit" value="Зарегистрировать" class="button" />
      </form>
    </div>
    <img src="/img/img1.png" alt="" class="img_reg">
  </div>
</body>

</html>